<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/singup"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FEFEFE"
    tools:context=".SignUp">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="304dp"
        android:layout_height="0dp"
        android:layout_marginTop="17dp"
        android:layout_marginBottom="31dp"
        android:src="@drawable/logobest"
        app:layout_constraintBottom_toTopOf="@+id/textView2"
        app:layout_constraintEnd_toEndOf="@+id/textView2"
        app:layout_constraintStart_toStartOf="@+id/textView2"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/passforgot"
        style="@style/Widget.Material3.Button.TonalButton"
        android:layout_width="163dp"
        android:layout_height="78dp"
        android:layout_marginBottom="16dp"
        android:backgroundTint="#AEBFF1"
        android:fontFamily="sans-serif-smallcaps"
        android:onClick="didaacc"
        android:text="done"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="#000000"
        android:textStyle="bold"
        android:typeface="normal"
        app:layout_constraintBottom_toTopOf="@+id/gotologin"
        app:layout_constraintEnd_toEndOf="@+id/gotologin"
        app:layout_constraintStart_toStartOf="@+id/gotologin"
        app:layout_constraintTop_toBottomOf="@+id/passwords2"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="186dp"
        android:layout_height="76dp"
        android:layout_marginBottom="31dp"
        android:fontFamily="sans-serif-smallcaps"
        android:text="SignUP "
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="#000000"
        android:textSize="34sp"
        android:textStyle="bold|italic"
        android:typeface="sans"
        app:layout_constraintBottom_toTopOf="@+id/emailsignup"
        app:layout_constraintEnd_toEndOf="@+id/emailsignup"
        app:layout_constraintStart_toStartOf="@+id/emailsignup"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <EditText
        android:id="@+id/emailsignup"
        android:layout_width="225dp"
        android:layout_height="50dp"
        android:layout_marginBottom="31dp"
        android:backgroundTint="#000000"
        android:ems="10"
        android:foregroundTint="#000000"
        android:hint="e-mail"
        android:inputType="textEmailAddress"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toTopOf="@+id/etPasssignup"
        app:layout_constraintEnd_toEndOf="@+id/etPasssignup"
        app:layout_constraintStart_toStartOf="@+id/etPasssignup"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/passwords2"
        style="@style/Widget.AppCompat.Light.AutoCompleteTextView"
        android:layout_width="222dp"
        android:layout_height="46dp"
        android:layout_marginBottom="30dp"
        android:ems="10"
        android:hint="password Confirm"
        android:inputType="textPassword"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toTopOf="@+id/passforgot"
        app:layout_constraintEnd_toEndOf="@+id/passforgot"
        app:layout_constraintStart_toStartOf="@+id/passforgot"
        app:layout_constraintTop_toBottomOf="@+id/etPasssignup"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/etPasssignup"
        android:layout_width="223dp"
        android:layout_height="45dp"
        android:layout_marginBottom="31dp"
        android:ems="10"
        android:hint="password"
        android:inputType="textPassword"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toTopOf="@+id/passwords2"
        app:layout_constraintEnd_toEndOf="@+id/passwords2"
        app:layout_constraintStart_toStartOf="@+id/passwords2"
        app:layout_constraintTop_toBottomOf="@+id/emailsignup"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/gotologin"
        android:layout_width="88dp"
        android:layout_height="81dp"
        android:layout_marginBottom="20dp"
        android:fontFamily="sans-serif-smallcaps"
        android:text="go to login"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="#000000"
        android:textStyle="bold|italic"
        android:typeface="monospace"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/passforgot"
        tools:ignore="MissingConstraints" />
</androidx.constraintlayout.widget.ConstraintLayout>