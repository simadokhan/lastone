<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/homepage11"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FEFEFE"
    tools:context=".HomePage">

    <!-- TODO: Update blank fragment layout -->


    <Button
        android:id="@+id/carrer1"
        style="@style/Widget.Material3.Button.TonalButton"
        android:layout_width="65dp"
        android:layout_height="302dp"
        android:layout_marginTop="386dp"
        android:layout_marginEnd="47dp"
        android:layout_marginBottom="43dp"
        android:backgroundTint="#7BD1E8"
        android:fontFamily="sans-serif-smallcaps"
        android:onClick="didaacc"
        android:text="carrer"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="#000000"
        android:textStyle="bold"
        android:typeface="normal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/playES"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/help"
        style="@style/Widget.Material3.Button.TonalButton"
        android:layout_width="63dp"
        android:layout_height="277dp"

        android:layout_marginStart="55dp"
        android:layout_marginTop="293dp"
        android:layout_marginBottom="161dp"
        android:backgroundTint="#AEBFF1"
        android:fontFamily="sans-serif-smallcaps"
        android:onClick="didaacc"
        android:text="help"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="#000000"
        android:textStyle="bold"
        android:typeface="normal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/playES"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/barrier2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="left"
        tools:layout_editor_absoluteX="411dp" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="146dp"
        android:layout_height="92dp"
        android:layout_marginTop="45dp"
        android:layout_marginBottom="23dp"
        android:src="@drawable/hi"
        app:layout_constraintBottom_toTopOf="@+id/bestscore"
        app:layout_constraintEnd_toEndOf="@+id/bestscore"
        app:layout_constraintHorizontal_bias="0.387"
        app:layout_constraintStart_toStartOf="@+id/bestscore"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/playES"
        style="@style/Widget.Material3.Button.TonalButton"
        android:layout_width="126dp"
        android:layout_height="110dp"
        android:layout_marginBottom="45dp"
        android:backgroundTint="#7BD1E8"
        android:fontFamily="sans-serif-smallcaps"
        android:onClick="didaacc"
        android:text="EASY
        mode"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="#000000"
        android:textStyle="bold"
        android:typeface="normal"
        app:layout_constraintBottom_toTopOf="@+id/imageView3"
        app:layout_constraintEnd_toEndOf="@+id/imageView3"
        app:layout_constraintStart_toStartOf="@+id/imageView3"
        app:layout_constraintTop_toBottomOf="@+id/playMID"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/playMID"
        style="@style/Widget.Material3.Button.TonalButton"
        android:layout_width="121dp"
        android:layout_height="110dp"
        android:layout_marginBottom="14dp"
        android:backgroundTint="#A2F1EF"
        android:fontFamily="sans-serif-smallcaps"
        android:onClick="didaacc"
        android:text="MID mode"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="#000000"
        android:textStyle="bold"
        android:typeface="normal"
        app:layout_constraintBottom_toTopOf="@+id/playES"
        app:layout_constraintEnd_toEndOf="@+id/playES"
        app:layout_constraintStart_toStartOf="@+id/playES"
        app:layout_constraintTop_toBottomOf="@+id/playHARD"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/bestscore"
        android:layout_width="178dp"
        android:layout_height="40dp"
        android:layout_marginTop="23dp"
        android:text="BEST SCORE:"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toTopOf="@+id/playHARD"
        app:layout_constraintEnd_toEndOf="@+id/playHARD"
        app:layout_constraintStart_toStartOf="@+id/playHARD"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="125dp"
        android:layout_height="93dp"
        android:layout_marginEnd="148dp"
        android:layout_marginBottom="20dp"
        android:src="@drawable/pandaset"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/playHARD"
        style="@style/Widget.Material3.Button.TonalButton"
        android:layout_width="119dp"
        android:layout_height="104dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="14dp"
        android:backgroundTint="#AEBFF1"
        android:fontFamily="sans-serif-smallcaps"
        android:onClick="didaacc"
        android:text="@string/hard_mode"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="#000000"
        android:textStyle="bold"
        android:typeface="normal"
        app:layout_constraintBottom_toTopOf="@+id/playMID"
        app:layout_constraintEnd_toEndOf="@+id/playMID"
        app:layout_constraintStart_toStartOf="@+id/playMID"
        app:layout_constraintTop_toBottomOf="@+id/bestscore"
        tools:ignore="MissingConstraints" />


</androidx.constraintlayout.widget.ConstraintLayout>