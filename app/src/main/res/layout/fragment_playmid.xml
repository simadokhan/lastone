<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".Playmid">
    <!-- TODO: Update blank fragment layout -->

    <ImageView
        android:id="@+id/circle1m"
        android:layout_width="155dp"
        android:layout_height="192dp"
        android:layout_marginEnd="34dp"
        android:layout_marginBottom="179dp"
        android:src="@drawable/circle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/circle2m"
        app:layout_constraintTop_toBottomOf="@+id/circle3m" />

    <ImageView
        android:id="@+id/circle4m"
        android:layout_width="155dp"
        android:layout_height="192dp"
        android:layout_marginStart="34dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="29dp"
        android:src="@drawable/circle"
        app:layout_constraintBottom_toTopOf="@+id/circle2m"
        app:layout_constraintEnd_toStartOf="@+id/circle3m"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/HARDSCORE"
        app:layout_constraintVertical_bias="0.39" />

    <ImageView
        android:id="@+id/circle3m"
        android:layout_width="155dp"
        android:layout_height="192dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="34dp"
        android:src="@drawable/circle"
        app:layout_constraintBottom_toTopOf="@+id/circle1m"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/circle4m"
        app:layout_constraintTop_toBottomOf="@+id/HARDSCORE" />

    <ImageView
        android:id="@+id/circle2m"
        android:layout_width="155dp"
        android:layout_height="192dp"
        android:layout_marginStart="38dp"
        android:layout_marginEnd="29dp"
        android:layout_marginBottom="32dp"
        android:src="@drawable/circle"
        app:layout_constraintBottom_toTopOf="@+id/exitM"
        app:layout_constraintEnd_toStartOf="@+id/circle1m"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/circle4m" />

    <TextView
        android:id="@+id/HARDSCORE"
        android:layout_width="126dp"
        android:layout_height="54dp"
        android:layout_marginStart="142dp"
        android:layout_marginTop="67dp"
        android:layout_marginEnd="143dp"
        android:text="score"
        android:textAlignment="center"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toTopOf="@+id/circle3m"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/exitM"
        android:layout_width="190dp"
        android:layout_height="144dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="211dp"
        android:layout_marginBottom="2dp"
        android:backgroundTint="#FFFFFF"
        android:src="@drawable/project1234"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/circle2m" />

    <TextView
        android:id="@+id/timerM"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="19dp"
        android:layout_marginEnd="354dp"
        android:layout_marginBottom="118dp"
        android:text="00:00"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/circle4m"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>